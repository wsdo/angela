{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": [
    "react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "extends": "airbnb-base",
  "rules": {
    "no-unused-expressions": [
      1,
      {
        "allowShortCircuit": true
      }
    ],
    "no-empty": [
      2,
      {
        "allowEmptyCatch": true
      }
    ],
    "default-case": 0,
    "no-case-declarations": 0,
    "no-script-url": 0,
    "no-console": "off",
    "import/prefer-default-export": 0,
    "semi": 0,
    "eol-last": 0,
    "no-unused-vars": 1,
    "global-require": 0,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "import/no-unresolved": 0,
    "no-unneeded-ternary": 1,
    "no-nested-ternary": 1,
    "max-len": [
      2,
      150
    ],
    "no-return-assign": 0,
    "yoda": "off",
    "dot-notation": 1,
    "no-param-reassign": 1,
    "func-names": 0,
    "class-methods-use-this": 0,
    "no-plusplus": 0
  }
}
